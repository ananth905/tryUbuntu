 <div class="top-setting-container absolute" {{on-click-outside (action this.toggleProperty)}} {{did-insert this.styleInputSlider}}>
  <div class="rounded-tiles flex w-full justify-between">
    <div class="rounded-tile battery">
      <img width="14" height="14" class="top-line-icon" src="https://img.icons8.com/ios-filled/100/battery-.png" alt="battery-"/>
       <span>96%</span>
    </div>
    <div class="flex">
        <div class="rounded-tile">
          <img class="top-line-icon" src="https://img.icons8.com/ios/100/take-screenshot.png" alt="take-screenshot"/>
        </div>
        <div class="rounded-tile">
          <img class="top-line-icon" src="https://img.icons8.com/fluency-systems-regular/50/settings--v1.png" alt="settings--v1"/>
        </div>
        <div class="rounded-tile">
          <img class="top-line-icon" src="https://img.icons8.com/ios/100/lock--v1.png" alt="lock--v1"/>
        </div>
        <div class="rounded-tile">
          <img class="top-line-icon" src="https://img.icons8.com/forma-thin/96/shutdown.png" alt="shutdown"/>
        </div>
    </div>
  </div>
   <div class="valume-input flex items-center  justify-center">
    <div class="flex top-settingoption  w-full items-center justify-center">
       <img class="top-settings-icon" src="/icons/volume.png" alt="">
        <div id="range-slider" class="range-slider"></div>
     </div>
   </div>
   <div class="valume-input flex items-center  justify-center">
    <div class="flex top-settingoption  w-full items-center justify-center">
       <img  class="top-settings-icon" src="https://img.icons8.com/material/24/sun--v1.png" />
        <div id="brightness"  class="range-slider "></div>
     </div>
   </div>
   <div class="settings-shortcut justify-center flex flex-wrap">
   {{#each this.itemBeforeDivder as |item index |}}
   <div class={{concat "flex flex-col settingoption items-center justify-center mt-1" (if item.onState " turn-on-option")}} onclick={{action this.toggleSubcatList item}}>
     <div class="flex items-center setting-opt-name justify-between"  >
      <div class="flex items-center ">
         <img src={{item.src}} alt="" class="top-settings-icon mr-3"/>
         <div class="settingoption-name ">{{item.name}}</div>
      </div>
     </div> 
  </div>
   {{/each}}
   </div>
   
 </div>
{{yield}}


<div class="settings-container ">
    <div class="settings-section file-manager-section  rounded-md flex">
        <div class="lhs-section lhs-section-bg">
            <div class="search-icon flex justify-between items-center ">
                <div class="setting-header-icon rounded">
                    <img width="11" height="11" src="https://img.icons8.com/ios-glyphs/240/search--v1.png"
                        alt="search--v1" />
                </div>
                <div class="current-menu">Files</div>
                <div class="setting-header-icon rounded">
                    <img width="11" height="11" src="https://img.icons8.com/ios/250/menu--v7.png" alt="menu--v7" />
                </div>
            </div>
            <div class="settings-lhs-options">
                {{#each this.settingsOption as |setting index|}}
                <div class={{concat "setting-option relative flex items-center " (if (eq index
                    this.currentScreen.id) " selected-setting " )}} onclick={{fn this.setCurrentScreen index}} >
                    <img class="setting-option-icon" src={{setting.icon}} />
                    <div class="settings-option-name">{{setting.name}}</div>
                    {{#if setting.bottomLine}}
                    <div class="setting-option-divider"></div>
                    {{/if}}
                </div>
                {{/each}}
            </div>
        </div>
        <div class="rhs-section flex-grow flex flex-col">
            <div class="rhs-sectioin-heading flex items-center justify-between w-full file-rhs-heading">
                <div class="flex">
                    <div class="back-icon browser-top-icons">
                    <img src="https://img.icons8.com/ios/100/back--v1.png" alt="" onclick={{action this.goBack}}>
                </div>
                <div class="forward-icon browser-top-icons">
                    <img src="https://img.icons8.com/ios/100/forward--v1.png" alt="forward--v1" />
                </div>
            </div>
            <div class="pwd-bar">
              <div class="current-setting-menu folder-pwd">
                <img class="pwd-icon" src={{this.currentScreen.icon}}/> {{this.pwd}}
              </div>
              <img class="folder-search" title="Search Current Folder" src="https://img.icons8.com/sf-ultralight/100/search-folder.png" alt="search-folder"/>
           </div>
            <WindowControl />
        </div>
        <div class="rhs-section-content h-full w-full">
            <div class="wifi-tab-container settings-tab-page  h-full w-full">
                <div class={{concat "px-4 pt-11 flex flex-wrap items-center " ( unless
                    this.currentFolderList "h-full w-full" )}}>
                  
                      <Files::Pages::AllFolder @currentFolderList={{this.currentFolderList.subFolder}} @changeDirectory={{action this.changeDirectory}} @contextCallBack={{this.showContextMenu}}/>
                 
                </div>
            </div>
            {{#if this.common.showContextMenu}}
                <ContextMenu @options={{this.contextMenuOptions}} @clickedEvent={{this.clickedEvent}}/>
            {{/if}}    
        </div>
    </div>
</div>
</div>
{{yield}}